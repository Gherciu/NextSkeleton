{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "components/*": ["./components/*"],
            "store/*": ["./store/*"],
            "static/*": ["./static/*"]
        }
    }
}
