{
  "name": "next-all-in",
  "description": "A all-in starter for Next",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Gherciu Gheorghe",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gherciu/next-all-in"
  },
  "bugs": {
    "url": "https://github.com/Gherciu/next-all-in/issues"
  },
  "scripts": {
    "build": "next build",
    "export": "next build && next export",
    "start": "nodemon ./server/index.js",
    "serve": "pm2 start ./ecosystem.json",
    "lint:scripts": "eslint ./ --max-warnings=0",
    "fix:scripts": "eslint ./ --fix --max-warnings=0",
    "lint:styles": "stylelint \"./src/**/*.scss\" --syntax=scss",
    "fix:styles": "stylelint \"./src/**/*.scss\" --fix --syntax=scss",
    "clean:install": "rimraf node_modules && rimraf package-lock.json && npm i"
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "npm run lint:scripts",
      "git add"
    ],
    "*.(css|scss)": [
      "npm run lint:styles",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "antd": "^3.20.1",
    "bourbon": "^6.0.0",
    "classnames": "^2.2.6",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "next": "^8.0.4",
    "next-i18next": "^0.36.0",
    "next-redux-wrapper": "^3.0.0-alpha.2",
    "nprogress": "^0.2.0",
    "pm2": "^3.4.1",
    "prop-types": "^15.7.2",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "reselect": "^4.0.0",
    "tailwindcss": "^1.0.4",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@svgr/webpack": "^4.3.1",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-less": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "babel-eslint": "^10.0.2",
    "dotenv": "^8.0.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "file-loader": "^3.0.1",
    "husky": "^3.0.0",
    "less": "^3.9.0",
    "lint-staged": "^9.2.0",
    "next-compose-plugins": "^2.1.1",
    "next-optimized-images": "^2.4.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-scss": "^3.9.0",
    "url-loader": "^1.1.2"
  }
}
